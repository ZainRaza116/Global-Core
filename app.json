{
  "apps": [
    {
      "name": "django_app",
      "script": "manage.py",
      "args": ["runserver", "0.0.0.0:8001"],
      "interpreter": "python3",
      "instances": 1,
      "autorestart": true,
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
